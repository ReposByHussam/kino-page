<div class="movie-page">
  <a href="/">Tillbaka till startsidan</a>

  <article class="card movieCard">
    <h1 class="movieCard__title">{{ movie.title }}</h1>

    <div class="movieCard__item">
      <strong>Beskrivning:</strong>
      <div class="intro">
        {{{ movie.intro }}}
      </div>
    </div>

    {{#if movie.image }}
    <img src="{{ movie.image.url }}" class="movie-page__poster">
    {{/if }}

    <a href="/" class="btn btn--secondary movieCard__button">Tillbaka till startsidan</a>
    <a href="/movies" class="btn btn--primary">Tillbaka till alla filmer</a>
  </article>
</div>

