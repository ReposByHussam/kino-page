<style>
  .movie-page {
    text-align: center;
    padding: 2rem;
  }

  .movie-page .movieCard__img {
    max-width: 20em;
  }

  .intro {
    max-width: 50%;
    margin: 0 auto;
    text-align: left;
  }

  .movie-page-buttons {
    justify-self: center;
  }

  .reviews {
    max-width: 900px;
    margin: 2rem auto 0;
    text-align: left;
    padding: 1rem;
    border: 1px solid #ddd;
    border-radius: 10px;
  }
</style>

<main class="main">
  <article class="movie-page">
    <h1 class="movieCard__title">{{movie.title}}</h1>

    <div class="movieCard__item">
      <strong>Beskrivning:</strong>
      <div class="intro">
        {{{movie.intro}}}
      </div>
    </div>

    {{#if movie.image}}
      <img src="{{movie.image.url}}" class="movieCard__img" alt="{{movie.title}}">
    {{/if}}

    <button class="btn btn-menu--one movieCard__button">Boka</button>
  </article>

  <section class="reviews">
    <div id="reviews" data-movie-id="{{movie.id}}"></div>
  </section>

  <script type="module" src="/src/scripts/reviews.js"></script>

  <div class="movie-page-buttons">
    <a href="/" class="btn btn--primary">Tillbaka till startsidan</a>
    <a href="/movies" class="btn btn--primary">Tillbaka till alla filmer</a>
  </div>
</main>