<style>
  .main .main__filmsContainer__list a {
    color: #821818;
  }

  .main .main__filmsContainer__list a:hover {
    color: #f3543b;
  }

  .upcoming-screenings__list {
    margin: 2rem 0;
    padding: 4rem;
  }

  .upcoming-screenings__day {
    border: 1px solid #b67272;
    padding: 1rem;
    margin: 0.5rem 0;
    border-radius: 4px;
    background-color: white;
    text-align: left;
  }

  .upcoming-screenings__date {
    font-weight: bold;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .upcoming-screenings__screening {
    color: #666;
    font-style: italic;
    list-style: none;
  }

  .loading,
  .empty,
  .error {
    color: #f3543b;
    font-weight: bold;
    text-align: center;
  }

  .main .main__filmsContainer__list a {
    color: #821818;
  }

  .main .main__filmsContainer__list a:hover {
    color: #f3543b;
  }
</style>

<main class="main">
  <section class="main__video">
    <div class="main__video__container">
      <video class="main__img" loop autoplay muted playsinline poster="/src/pics/KINO_hall_preview.jpg"
        onclick="this.paused ? this.play() : this.pause();">
        <source src="/src/pics/videoKINO_cinema_hall.webm" type="video/webm">
        <source src="/src/pics/videoKINO_empty_cinema_hall.mp4" type="video/mp4">
      </video>
    </div>
  </section>

  <!--FILMS TODAY SECTION FOR CARDS-->
  <section class="main__filmsToday">

    <!-- POPULÄRA FILMER -->
    <h2 class="main__filmsContainer__heading">Populära filmer</h2>
    <ul id="popular-movies" class="main__filmsContainer"></ul>

    <!-- ALLA AKTUELLA FILMER -->
    <h2 class="main__filmsContainer__heading">Alla aktuella filmer</h2>
    <p>Här kan du se alla filmer som visas idag. Klicka på knappen nedan för att utforska.</p>

    <ul class="main__filmsContainer__list">
      {{> movies-list}}
    </ul>

    <a href="/movies" class="btn btn--primary" title="Alla aktuella filmer">
      Alla aktuella filmer
    </a>

  </section>
  <!--WELCOME SECTION-->
  <div class="main__welcome">
    <h2 class="main__welcome__title">Välkommenn till KINO i Uppsala!</h2>
    <p class="main__welcome__moto">Av filmälskare - för film älskare</p>

    <div class="main__welcome__container">
      <div class="main__welcome__item">
        <img class="main__welcome__img" src="/src/pics/KINO-arc.webp" alt="Kino lysande båge">
        <a href="/about-us" data-route="/about-us" class="btn btn--secondary" title="Mer om oss">Mer om oss</a>
      </div>

      <div class="main__welcome__item">
        <img class="main__welcome__img" src="/src/pics/KINO-bistro.webp" alt="Kino bistro">
        <a href="/bistro" data-route="/bistro.html" class="btn btn--secondary" title="Till bistro">Till
          bistro</a>
      </div>

      <div class="main__welcome__item">
        <img class="main__welcome__img" src="/src/pics/KINO-cinemahall-seats.webp" alt="Kino biograf sal med bord" />
        <a href="#" class="btn btn--secondary" title="Boka salen">Boka salen</a>
      </div>

      <div class="main__welcome__item">
        <img class="main__welcome__img" src="/src/pics/KINO-street.webp" alt="Kino utsikt från gatan">
        <a href="/eventPage" data-route="/eventPage" class="btn btn--secondary" title="Evenemang hos oss">Evenemang hos
          oss</a>
      </div>
    </div>
  </div>

  <!--UPCOMING FILMS SECTION FOR CARDS-->
  <section class="main__filmsUpcoming">
    <h2>Kommande visningar</h2>
    <div class="upcoming-screenings__list"></div>
  </section>
</main>